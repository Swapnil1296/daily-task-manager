{
    "manifest_version": 3,
    "name": "My MERN Extension",
    "version": "1.0.0",
    "description": "Chrome extension built with MERN stack",
    "permissions": [
        "storage",
        "activeTab"
    ],
    "action": {
        "default_popup": "index.html",
        "default_icon": {
            "16": "icon16.png",
            "48": "icon48.png",
            "128": "icon128.png"
        }
    },
    "background": {
        "service_worker": "static/js/background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "static/js/content.js"
            ]
        }
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "static/js/*.js",
                "static/css/*.css"
            ],
            "matches": [
                "<all_urls>"
            ]
        }
    ]
}